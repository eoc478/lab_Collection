{% extends "layout.njk" %}

{% block content %}
<video playsinline muted loop class="videoBG" id="videoBG">
    <source src="assets/clouds.mp4" type="video/mp4">
</video>

<div class="container">

    <div class="titleCont">
        <h1 class="title" onClick="changeBG()">still : awake</h1>
    </div>

    <div class="postContainer">
    {% for post in collections.post %}
        <div class="post {{ post.data.type }}">
            <p><a href="{{ post.url | prefixedUrl }}">{{ post.data.homeTitle }}</a></p>
        </div>
    {% endfor %} 
    </div>

    <!-- <div class="filterButtons">
        <button onclick="showPosts('work')">work</button>
        <button onclick="showPosts('fun')">fun</button>
    </div> -->
</div>
{% endblock %}